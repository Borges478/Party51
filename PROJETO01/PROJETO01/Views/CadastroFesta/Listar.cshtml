@model List<PROJETO01.Modelos.CadastroFesta>

<h3>
    CADASTRO DE FESTAS
    <a class="btn btn-sm btn-primary float-right" href="/CadastroFesta/Adicionar">
        + ADICIONAR
    </a>
</h3>

<table class="table table-hover ">
    <thead>
        <tr>
            <th>FestaID</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FestaID</td>
                <td>@item.Nome</td>
                <td>
                    <a href="/CadastroFesta/Editar?uf=@item.FestaID" class="btn btn-sm btn-warning">
                        Editar
                    </a>
                    <a href="/CadastroFesta/Excluir?uf=@item.FestaID" class="btn btn-sm btn-danger">
                        Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


